@{
}
@model BulkReversal.ViewModel.CompositeViewModel;
<!DOCTYPE html>
    <html>
    <head>
        <title></title>
    </head>
    <body>
    <h1 style="text-align:center">Login</h1>
    <form asp-controller="User" asp-action="Login" method="post">
        <div class="login-form">
            <h4 class="login-title">Login</h4>
            <div class="row">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="col-12 mb-20">
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    </div>
                }
                <div class="col-md-12 col-12 mb-20">
                    <label>Email Address</label>
                    <input asp-for="User.Email" class="mb-0" type="text" placeholder="Email Address">
                    <span asp-validation-for="User.Email"></span>
                </div>
                <div class="col-12 mb-20">
                    <label>Password</label>
                    <input asp-for="User.Password" class="mb-0" type="password" placeholder="Password">
                    <span asp-validation-for="User.Password"></span>
                </div>
                <div class="col-md-12">
                    <button class="register-button mt-0">Login</button>
                </div>
            </div>
        </div>
    </form>
</body>
    </html>